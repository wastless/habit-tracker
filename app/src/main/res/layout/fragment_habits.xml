<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1F1F1F">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Привычки"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/daysContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:paddingHorizontal="20dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/titleText">

        <TextView
            android:id="@+id/mondayButton"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="0.9"
            android:background="@drawable/day_button_background"
            android:gravity="center"
            android:text="Пн"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="normal"
            android:fontFamily="sans-serif-medium" />

        <Space
            android:layout_width="12dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tuesdayButton"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="0.9"
            android:background="@drawable/day_button_background"
            android:gravity="center"
            android:text="Вт"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="normal"
            android:fontFamily="sans-serif-medium" />

        <Space
            android:layout_width="12dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/wednesdayButton"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="0.9"
            android:background="@drawable/day_button_background"
            android:gravity="center"
            android:text="Ср"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="normal"
            android:fontFamily="sans-serif-medium" />

        <Space
            android:layout_width="12dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/thursdayButton"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="0.9"
            android:background="@drawable/day_button_background"
            android:gravity="center"
            android:text="Чт"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="normal"
            android:fontFamily="sans-serif-medium" />

        <Space
            android:layout_width="12dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/fridayButton"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="0.9"
            android:background="@drawable/day_button_background"
            android:gravity="center"
            android:text="Пт"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="normal"
            android:fontFamily="sans-serif-medium" />

        <Space
            android:layout_width="12dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/saturdayButton"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="0.9"
            android:background="@drawable/day_button_background"
            android:gravity="center"
            android:text="Сб"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="normal"
            android:fontFamily="sans-serif-medium" />

        <Space
            android:layout_width="12dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/sundayButton"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="0.9"
            android:background="@drawable/day_button_background"
            android:gravity="center"
            android:text="Вс"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="normal"
            android:fontFamily="sans-serif-medium" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/bottom_container_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/daysContainer">

        <LinearLayout
            android:id="@+id/habitsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="16dp"
            android:paddingHorizontal="20dp"
            app:layout_constraintTop_toTopOf="parent">
        </LinearLayout>

        <LinearLayout
            android:id="@+id/emptyStateContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/noHabitsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Нет привычек"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text='Создайте новую привычку, нажав на "+" ниже'
                android:textColor="@color/white_60"
                android:textSize="10sp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout> 